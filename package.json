		"@types/jest": "^29.5.14",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/morgan": "^1.9.9",
		"@types/node": "^22.10.0",
		"@types/sequelize": "^4.28.20",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.7",
		"@types/validator": "^13.12.2",
